    <main class="main-content ">
        <%- include('../layout/header'); %>
            <div class="content-wrapper  js-content-wrapper">

                <section class="page-header -type-1 mt-60">
                    <div class="container ">
                        <div class="row no-gutters justify-content-center">
                            <div class="col-xl-8 col-lg-9 col-md-11">
                                <div class="page-header__content">
                                    <div class="row justify-content-center text-center ">
                                        <%if ( order.status=='Paid' ) {%>
                                            <div class="col-12">
                                                <div data-anim="slide-up delay-1" class="is-in-view">

                                                    <h1 class="page-header__title text-purple-1">Đơn hàng của bạn đã
                                                        thanh
                                                        toán
                                                        thành công</h1>

                                                </div>

                                                <div data-anim="slide-up delay-2" class="is-in-view">
                                                    <p class="page-header__text">Các khoá học sẽ được gửi về email
                                                        của bạn trong khoảng 2-4h làm việc</p>
                                                </div>

                                            </div>
                                            <%} else { %>
                                                <div class="col-12">
                                                    <div data-anim="slide-up delay-1" class="is-in-view">

                                                        <h1 class="page-header__title">Đơn hàng của bạn đã được tạo</h1>

                                                    </div>

                                                    <div data-anim="slide-up delay-2"
                                                        class="is-in-view text-left layout-pt-sm">
                                                        <p class="page-header__text">Hello, <%=order.email%>
                                                                Đơn hàng của bạn đã được xác nhận. Các khoá học sẽ được
                                                                gửi
                                                                về
                                                                email của bạn trong khoảng 2 giờ làm việc sau khi bạn
                                                                thanh toán !</p>
                                                        <p class="page-header__text">Khoá học tự động gửi. Bạn chuyển
                                                            khoản
                                                            hãy
                                                            ghi ĐÚNG NỘI DUNG CHUYỂN KHOẢN

                                                            Cảm ơn bạn đã Get khoá học tại Full Bootcamp

                                                            Full Bootcamp Team</p>


                                                    </div>

                                                    <div class="row layout-pt-md">

                                                        <div class="col-md-12 col-sm-12 ">
                                                            <div
                                                                class="text-left pt-20 pb-30 px-30 rounded-16 bg-white -dark-bg-dark-1 shadow-4">
                                                                <h5 class="text-17 mb-20">Vietcombank - Trần Duy Bắc
                                                                </h5>

                                                                <div class="">
                                                                    <div class="d-flex">
                                                                        <div class="shrink-0">
                                                                            <img width="100" height="100"
                                                                                src="<%=qrcode.data.qrDataURL%>"
                                                                                alt="badge">
                                                                        </div>

                                                                        <div class="ml-20">
                                                                            <h6 class="text-17 fw-500">0141000836982
                                                                            </h6>
                                                                            <div class="text-14 mt-5">Nội dung ck:
                                                                                <span class="fw-600">
                                                                                    bootcamp <%=order.id%>
                                                                                </span>
                                                                            </div>
                                                                        </div>
                                                                    </div>


                                                                </div>
                                                            </div>
                                                        </div>
