            });
            $('#schedule').on('apply.daterangepicker', function(ev, picker) {
                $(this).val(picker.startDate.format('YYYY-MM-DD hh:mm:ss'))
                const scheduleDate = $('#schedule').val()
                const now = moment().format("YYYY-MM-DD hh:mm:ss")
                const momentFormnow = moment(now).to(scheduleDate);
                $('#infoSchedule').text(`Bài viết sẽ được đăng ${momentFormnow}`);
            });
            let scheduleDate = $('#scheduleDateData').val()
