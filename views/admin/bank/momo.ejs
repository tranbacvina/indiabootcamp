<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lịch sử giao dịch MOMO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />

</head>

<body class="" style="background-color: rgb(245, 244, 248)">
    <div id="root">
        <div class="App">
            <%- include('../nav'); %>
                <div class="container-fluid p-4">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="border-bottom pb-4 mb-4 d-md-flex align-items-center justify-content-between">
                                <div class="mb-3 mb-md-0">
                                    <h1 class="mb-1 h2 fw-bold">Lịch sử giao dịch MOMO</h1>
                                    <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="#" role="button"
                                                    tabindex="0">Dashboard</a></li>
                                            <li class="breadcrumb-item"><a href="#" role="button" tabindex="0">CMS</a>
                                            </li>
                                            <li class="breadcrumb-item active" aria-current="page">Overview</li>
                                        </ol>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-3 col-lg-6 col-md-12 col-sm-12">
                            <div class="mb-4 card border-light">
                                <div class="card-body"><span class="fs-6 text-uppercase fw-semi-bold">Số tài
                                        khoản</span>
                                    <div class="mt-2 d-flex justify-content-between align-items-center">
                                        <div class="lh-1">
                                            <h2 class="h1 fw-bold mb-1">
                                            </h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-6 col-md-12 col-sm-12">
                            <div class="mb-4 card border-light">
                                <div class="card-body"><span class="fs-6 text-uppercase fw-semi-bold">Số dư</span>
                                    <div class="mt-2 d-flex justify-content-between align-items-center">
                                        <div class="lh-1">
                                            <h2 class="h1 fw-bold mb-1">


                                            </h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-6 col-md-12 col-sm-12">
                            <div class="mb-4 card border-light">
                                <div class="card-body"><span class="fs-6 text-uppercase fw-semi-bold">Tiền vào</span>
                                    <div class="mt-2 d-flex justify-content-between align-items-center">
                                        <div class="lh-1">
                                            <h2 class="h1 fw-bold mb-1 text-success">

                                                <%= Number(totalAmount).toLocaleString('it-IT', {style : 'currency' ,
                                                    currency : 'VND' }); %>
                                            </h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-3 col-lg-6 col-md-12 col-sm-12">
                            <div class="mb-4 card border-light">
                                <div class="card-body"><span class="fs-6 text-uppercase fw-semi-bold">Tiền ra</span>
                                    <div class="mt-2 d-flex justify-content-between align-items-center">
                                        <div class="lh-1">
                                            <h2 class="h1 fw-bold mb-1 text-danger">
                                                <%= Number(debitlAmount).toLocaleString('it-IT', {style : 'currency' ,
                                                    currency : 'VND' }); %>

                                            </h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="card">
                                <div
                                    class="d-flex justify-content-between align-items-center border-bottom-0 card-header-height card-header">
                                    <h4 class="mb-0">Lịch sử giao dịch</h4>
                                    <input type="text" name="dates" class="dates">
                                </div>
                                <div class="p-0 card-body">
                                    <div class="table-responsive ">
                                        <table role="table" class="text-nowrap table">
                                            <thead class="table-light">
                                                <tr role="row">
                                                    <th colspan="1" role="columnheader">Thời gian</th>
                                                    <th colspan="1" role="columnheader">Phone</th>
                                                    <th colspan="1" role="columnheader">Nội dung</th>
                                                    <th colspan="1" role="columnheader">Comment</th>
                                                    <th colspan="1" role="columnheader">Số tiền</th>

                                                </tr>
                                            </thead>
                                            <tbody role="rowgroup">
                                                <%if (data) { %>
                                                    <% for (let item of data) { %>
                                                        <tr role="row">
                                                            <td role="cell" class="datesTime">
                                                                <%= item.time %>
                                                            </td>
                                                            <td role="cell" class="text-inherit">
                                                                <%= item.partnerID %>
                                                            </td>
                                                            <td role="cell">
                                                                <h5 class="mb-0"><a class="text-inherit">
                                                                        <%= item.caption %>
                                                                    </a></h5>
                                                            </td>
                                                            <td role="cell">
                                                                <h5 class="mb-0"><a class="text-inherit">
                                                                        <%= item.comment %>
                                                                    </a></h5>
                                                            </td>
                                                            <%if (item.type==16) {%>
                                                                <td role="cell" class=" text-danger">
                                                                    - <%=
                                                                        Number(item.debitAmount).toLocaleString('it-IT',
                                                                        {style : 'currency' , currency : 'VND' }); %>
                                                                </td>
                                                                <%}else {%>
                                                                    <td role="cell" class=" text-success">
                                                                        + <%=
                                                                            Number(item.amount).toLocaleString('it-IT',
                                                                            {style : 'currency' , currency : 'VND' });
                                                                            %>
                                                                    </td>
                                                                    <%}%>

                                                                        <%}%>
                                                                            <%}%>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</body>
<%- include('../../layout/footerjs'); %>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <script>
        $('input[name="dates"]').daterangepicker({
            opens: 'left',
            alwaysShowCalendars: true,
            ranges: {
                'Today': [moment(), moment()],
                'Yesterday': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                'Last 7 Days': [moment().subtract(6, 'days'), moment()],
                'Last 30 Days': [moment().subtract(29, 'days'), moment()],
                'This Month': [moment().startOf('month'), moment().endOf('month')],
                'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
            }
        }, function (start, end, label) {
            console.log("A new date selection was made: " + start + ' to ' + end);
            window.location = `${window.location.pathname}?begin=${start.format('X')}&end=${end.format('X')}`;
        });
